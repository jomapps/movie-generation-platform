# Story Architect Service Configuration

# Service Configuration
SERVICE_NAME=mcp-story-architect-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=30

# PayloadCMS Configuration
PAYLOAD_API_URL=http://localhost:3000/api
PAYLOAD_API_SECRET=your-payload-secret
PAYLOAD_TIMEOUT_SECONDS=10

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT_SECONDS=6

# LLM Override Configuration (optional)
OVERRIDE_LLM_PROVIDER=
OVERRIDE_LLM_MODEL=
OVERRIDE_LLM_API_KEY=
OVERRIDE_LLM_MAX_TOKENS=
OVERRIDE_LLM_TEMPERATURE=

# Observability
ENABLE_METRICS=true
METRICS_PORT=8081
ENABLE_TRACING=true

# Story Architect Configuration  
MAX_RETRIES=1
WORD_LIMIT_SOFT=80
WORD_LIMIT_HARD=120
DEFAULT_TARGET_RUNTIME=30
DETERMINISTIC_SEED_ENABLED=true

# Character Validation
STRICT_CHARACTER_VALIDATION=true
ALLOW_NEW_LOCATIONS=false

# Continuity Flagging
ENABLE_CONTINUITY_FLAGS=true
CONTINUITY_SEVERITY_THRESHOLD=warning